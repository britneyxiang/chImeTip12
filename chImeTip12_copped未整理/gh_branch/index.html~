<script type="text/javascript">
            $("#bodyContentID").load("./views/mscjIMEpage.html");
//  load navbar item
$("#gotoCJ_ime").click(function(){
    $.getScript( "./dict/msCjDict.js" )
        .done(function( script, textStatus ) {
            $("#bodyContentID").load("./views/mscjIMEpage.html");
        })
    .fail(function( jqxhr, settings, exception ) {
        console.log( "Triggered ajaxError handler." );
    });
});
$("#gotoPinYin_ime").click(function(){
    $.getScript( "./dict/thPinYinDict.js" )
        .done(function( script, textStatus ) {
            $("#bodyContentID").load("./views/pinyinIMEpage.html");
        })
    .fail(function( jqxhr, settings, exception ) {
        console.log( "Triggered ajaxError handler." );
    });
});

$("#goto_2Pin_ime").click(function(){
    $.getScript( "./dict/thPinYinDict.js" )
        .done(function( script, textStatus ) {
            $("#bodyContentID").load("./views/ms2pinIMEpage.html");
        })
    .fail(function( jqxhr, settings, exception ) {
        console.log( "Triggered ajaxError handler." );
});
});


